@model web_app.Models.BlogArticle

@{
    ViewData["Title"] = "Publish Blog Article";
}

<h1>Publicar Articulo</h1>

<h3>Esta seguro de publicar este articulo?</h3>
<div>
    <h4>Blog Article</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="PublishConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Publish" class="btn btn-sm btn-success" /> |
    </form>
</div>
