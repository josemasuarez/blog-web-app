@model IEnumerable<web_app.Models.BlogArticle>

@{
    ViewData["Title"] = "Blog Articles";
}

<h1>Blog Articles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Article</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.UpdatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.IsPublished)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var article in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => article.Title)</td>
            <td>@Html.DisplayFor(modelItem => article.Description)</td>
            <td>@Html.DisplayFor(modelItem => article.CreatedDate)</td>
            <td>@Html.DisplayFor(modelItem => article.UpdatedDate)</td>
            <td>@Html.DisplayFor(modelItem => article.IsPublished)</td>
            <td>
                @if (!article.IsPublished)
                {
                    <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-sm btn-danger">Delete</a>
                    <form asp-action="Publish" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@article.Id" />
                        <button type="submit" class="btn btn-sm btn-success">Publish</button>
                    </form>
                }
                else
                {
                    <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-sm btn-info">Details</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
