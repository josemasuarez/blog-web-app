@model IEnumerable<web_app.Models.User>

@{
    ViewData["Title"] = "User Privileges";
    var currentUser = User.Identity.Name;
}

<h1>Privilegios de Usuario</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => user.Username)</td>
            <td>
                @if (user.Username != currentUser)
                {
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Editar Privilegios</a>
                }
                else
                {
                    <span class="text-muted">No puedes editar tus propios privilegios</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
